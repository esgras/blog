{% extends 'BlogBundle::main.html.twig' %}
{% block title %}Login{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4 col-md-offset-3">
            <form action="{{ path('login') }}" method="post">
                <p>
                    <input type="text" name="_username" placeholder="Username" class="form-control" value="{{ last_username }}"></p>
                <p><input type="password" name="_password" placeholder="Password" class="form-control"></p>
                {% if errors %}
                    <div class="error">{{ errors.messageKey|trans(errors.messageData, 'security') }}</div>
                {% endif %}
                <p><a href="{{ path('forgot_password') }}"><small>forgot password</small></a></p>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                <p>
                    <button class="btn btn-primary">Login</button>
                </p>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </form>
        </div>
    </div>
{% endblock %}