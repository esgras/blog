{% extends 'BlogBundle::base.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-md-9">
            {% block body %}
            {% endblock %}
        </div>
        <div class="col-md-3">
            {% if app.user %}
                {{ render(controller('BlogBundle:Helper:menu')) }}
            {% endif %}
            {{ render(controller('BlogBundle:Helper:tagCloud')) }}
            {{ render(controller('BlogBundle:Helper:latestComments')) }}
        </div>
    </div>
{% endblock %}