{% extends 'BlogBundle::main.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1>{{ post.title }}</h1>
            <div class="post-content">
                {{ post.content }}
            </div>
            <div class="post-meta">
                Author: {{ post.author.username }} at {{ post.create_time|date("Y-m-d") }}
            </div>
            <br><br>
            <div id="comments">
                {% if post.comments|length  %}
                    <b>Some comments</b>
                {% else %}
                    <b>No comments</b>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}